{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target node --external process.env",
    "build:vercel": "bun build src/vercel.ts --outdir ./dist --target node --external process.env",
    "start": "bun run src/index.ts",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@ai-sdk/openai": "3.0.4",
    "@hono/node-server": "^1.12.0",
    "@read-flow/parser": "workspace:*",
    "@read-flow/shared": "workspace:*",
    "@supabase/supabase-js": "^2.76.1",
    "ai": "6.0.11",
    "better-auth": "^1.4.9",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "epub2": "^3.0.2",
    "hono": "^4.5.0",
    "js-tiktoken": "^1.0.21",
    "postgres": "^3.4.7",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "drizzle-kit": "^0.31.5",
    "typescript": "^5.5.0"
  }
}
